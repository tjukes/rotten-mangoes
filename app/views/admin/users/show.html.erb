<h2>User Profile</h2>
<%= link_to "Back to All Users", admin_users_path %>
<hr>

<h3><%= @user.firstname %> <%= @user.lastname %></h3>
<p>(<%= link_to "delete", admin_user_path(@user), method: :delete, data: {confirm: "You sure?"} %>)</p>

<div>
  <p>
    Email: <%= @user.email %>
  </p>
</div>

<% if @user.is_admin? %>
  <div>
    This user is also an admin.
  </div>
<% end %>
